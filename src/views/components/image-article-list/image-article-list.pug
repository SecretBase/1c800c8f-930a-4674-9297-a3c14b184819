mixin image-article-list(list)

  ul.image-article-list(class!=attributes.class)

    each item in list.items

      li.image-article-list-item
        article.image-article-list-article
          .image-article-list-image
            a(href=item.targetUrl): img(src=item.thumbnailUrl alt=item.title)
          .image-article-list-content
            h3.image-article-list-item-title: a(href=href=item.targetUrl)= item.title
            p= item.content
